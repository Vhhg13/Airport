<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlightInfoActivity">

    <ImageView
        android:id="@+id/dep_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/arr_icon"
        app:layout_constraintEnd_toStartOf="@+id/departure"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.1"
        />

    <TextView
        android:id="@+id/departure"
        android:text="SAMPLE TEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/dep_icon"
        app:layout_constraintStart_toEndOf="@+id/dep_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/dep_icon"
        />

    <ImageView
        android:id="@+id/arr_icon"
        android:layout_margin="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/dep_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/arrival"
        app:layout_constraintBottom_toTopOf="@+id/price_icon"
        />

    <TextView
        android:id="@+id/arrival"
        android:text="SAMPLE TEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/arr_icon"
        app:layout_constraintStart_toEndOf="@+id/arr_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/arr_icon"
        />

    <ImageView
        android:id="@+id/price_icon"
        android:layout_margin="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/arr_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/price"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/price"
        android:text="SAMPLE TEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/price_icon"
        app:layout_constraintStart_toEndOf="@+id/price_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/price_icon"
        />

</androidx.constraintlayout.widget.ConstraintLayout>